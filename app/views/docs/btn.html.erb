<h4>Block level button:</h4>
<blockquote>
  <p>&lt;div class="row"></p>
  <p>&nbsp;&nbsp;&lt;div class="col-sm-4"></p>
  <p>&nbsp;&nbsp;&nbsp;&nbsp;&lt;%= react_component(:button, text: 'Block level button', context: :primary, layout: :block) %></p>
  <p>&nbsp;&nbsp;&nbsp;&nbsp;&lt;%= react_component(:button, text: 'Block level button', context: :info     layout: :block) %></p>
  <p>&nbsp;&nbsp;&lt;/div></p>
  <p>&lt;/div></p>
</blockquote>

<blockquote>
  <p>&lt;div class="row"></p>
  <p>&nbsp;&nbsp;&lt;div class="col-sm-4"></p>
  <p>&nbsp;&nbsp;&nbsp;&nbsp;&lt;Button text='Block level button' context='primary', layout='block'/></p>
  <p>&nbsp;&nbsp;&nbsp;&nbsp;&lt;Button text='Block level button' context='info', layout='block'/></p>
  <p>&nbsp;&nbsp;&lt;/div></p>
  <p>&lt;/div></p>
</blockquote>

<p>generates the following HTML:</p>

<div class='well'>
  <div class="row">
    <div class="col-sm-4">
      <%= react_component(:button, {text: 'Block level button', context: :primary, layout: :block}, {tag: :p}) %>
      <%= react_component(:button, {text: 'Block level button', context: :info,    layout: :block}, {tag: :p}) %>
    </div>
  </div>
</div>
<br>

<h3>Properties</h3>

<table class='table table-striped'>
  <thead>
    <tr class='info'>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Default</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><code>text</code></td>
      <td>The string will display inside the button.</td>
      <td>String</td>
      <td>N/A</td>
    </tr>
    <tr>
      <td><code>type</code></td>
      <td>Button type. Options: <code>button</code>, <code>submit</code></td>
      <td>String</td>
      <td><code>button</code></td>
    </tr>
    <tr>
      <td><code>context</code></td>
      <td>
        Button background color. Options: <code>default</code>,
        <code>primary</code>, <code>success</code>, <code>info</code>,
        <code>warning</code>, <code>danger</code>
      </td>
      <td>String</td>
      <td><code>default</code></td>
    </tr>
    <tr>
      <td><code>size</code></td>
      <td>Button sizes. Options: <code>xs</code>, <code>sm</code>,
        <code>lg</code>
      </td>
      <td>String</td>
      <td>N/A</td>
    </tr>
    <tr>
      <td><code>state</code></td>
      <td>
        Button state. Options: <code>active</code>, <code>disabled</code>
      </td>
      <td>String</td>
      <td>N/A</td>
    </tr>
    <tr>
      <td><code>layout</code></td>
      <td>
        Button layout. Options: <code>block</code>
      </td>
      <td>String</td>
      <td>N/A</td>
    </tr>
  </tbody>
</table>
