<h2>Button</h2>

<hr>

<h3>Basic usage</h3>

<blockquote>
  <p>
    &lt;%= react_component(:button, text: 'Button') %>
  </p>
</blockquote>

<div class="well">
  <%= react_component(:button, text: 'Button') %>
</div>

<br>

<h3>Examples:</h3>
<h4>Contextual buttons:</h4>
<blockquote>
  <p>
    &lt;%= react_component(:button, text: 'Default', context: :default) %>
  </p>
  <p>
    &lt;%= react_component(:button, text: 'Primary', context: :primary) %>
  </p>
  <p>
    &lt;%= react_component(:button, text: 'Success', context: :success) %>
  </p>
  <p>
    &lt;%= react_component(:button, text: 'Info', context: :info) %>
  </p>
  <p>
    &lt;%= react_component(:button, text: 'Warning', context: :waring) %>
  </p>
  <p>
    &lt;%= react_component(:button, text: 'Danger', context: :danger) %>
  </p>
  <p>
    &lt;%= react_component(:button, text: 'Link', context: :link) %>
  </p>
</blockquote>

<blockquote>
  <p>
    &lt;Button text='Default' context='default'/>
  </p>
  <p>
    &lt;Button text='Primary' context='primary'/>
  </p>
  <p>
    &lt;Button text='Success' context='success'/>
  </p>
  <p>
    &lt;Button text='Info' context='info'/>
  </p>
  <p>
    &lt;Button text='Warning' context='warning'/>
  </p>
  <p>
    &lt;Button text='Danger' context='danger'/>
  </p>
  <p>
    &lt;Button text='Link' context='link'/>
  </p>
</blockquote>

<p>generates the following HTML:</p>

<div class='well'>
  <%= react_component(:button, {text: 'Default', context: :default}, {tag: :span}) %>
  <%= react_component(:button, {text: 'Primary', context: :primary}, {tag: :span}) %>
  <%= react_component(:button, {text: 'Success', context: :success}, {tag: :span}) %>
  <%= react_component(:button, {text: 'Info',    context: :info},    {tag: :span}) %>
  <%= react_component(:button, {text: 'Warning', context: :waring},  {tag: :span}) %>
  <%= react_component(:button, {text: 'Danger',  context: :danger},  {tag: :span}) %>
  <%= react_component(:button, {text: 'Link',    context: :link},    {tag: :span}) %>
</div>
<br>

