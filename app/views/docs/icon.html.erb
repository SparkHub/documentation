<h2>Icon</h2>

<hr>

<h3>Basic usage</h3>

<blockquote>
  <p>
    &lt;%= react_component(:icon, type: :home) %>
  </p>
</blockquote>

<blockquote>
  <p>
    &lt;Icon type='home' />
  </p>
</blockquote>

<div class="well">
  <%= react_component(:icon, type: :home) %>
</div>

